{% trans_default_domain 'AppBundle' %}

<!DOCTYPE html>
<html lang="{{ app.request.locale|split('_')[0] }}">
    <head>
        {% block title %}
            <title>{{ 'base.title'|trans }}</title>
        {% endblock title %}

        {% block meta %}
            <meta charset="UTF-8" />
            <meta name="viewport" content="width=device-width, initial-scale=1.0">
            <meta name="description" content="CV">
            <meta name="author" content="Christopher LOUÃ‹T">
            <meta http-equiv="content-type" content="text/html; charset=utf-8" />
        {% endblock meta %}

        {% block stylesheets_global %}

            {% if false == pdf %}
            {% include "common/favicons.html.twig" %}
            {% endif %}

            <link href="{{ prefix }}{{ asset('fontawesome/font-awesome.min.css') }}"
                  rel="stylesheet" type="text/css"/>
            <link href="{{ prefix }}{{ asset('css/bootstrap/tether.min.css') }}"
                  rel="stylesheet" type="text/css"/>
            <link href="{{ prefix }}{{ asset('css/bootstrap/bootstrap.min.css') }}"
                  rel="stylesheet" type="text/css"/>
            <link href="{{ prefix }}{{ asset('css/bootstrap/bootstrap-flat.min.css') }}"
                  rel="stylesheet" type="text/css"/>
            <link href="{{ prefix }}{{ asset('bundles/app/css/app.min.css') }}"
                  rel="stylesheet" type="text/css"/>
        {% if pdf %}
            <link href="{{ prefix }}{{ asset('bundles/app/css/pdf.min.css') }}"
                  rel="stylesheet" type="text/css"/>
        {% endif %}

        {% endblock stylesheets_global %}

        {% block stylesheets %}
        {% endblock stylesheets %}
    </head>
    <body>

        <div id="wrap" class="bg-light-gray">

            {% block menu %}
                {% if false == pdf %}
                {% include "common/menu.html.twig" %}
                {% endif %}
            {% endblock menu %}

            <div id="content" class="container">
                {% block content %}
                {% endblock content %}
            </div>

        </div>

        {% block footer %}
            {% if false == pdf %}
            {% include "common/footer.html.twig" %}
            {% endif %}
        {% endblock footer %}

        {% block javascripts_global %}
            <script type="text/javascript"
                    src="{{ prefix }}{{ asset('js/jquery/jquery.min.js') }}"></script>
            <script type="text/javascript"
                    src="{{ prefix }}{{ asset('js/bootstrap/tether.min.js') }}"></script>
            <script type="text/javascript"
                    src="{{ prefix }}{{ asset('js/bootstrap/bootstrap.min.js') }}"></script>
        {% endblock javascripts_global %}

        {% block javascripts %}
        {% endblock javascripts %}
    </body>
</html>
